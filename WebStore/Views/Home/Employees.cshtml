
@model IEnumerable<WebStore.Models.Employee>
@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@

<!DOCTYPE html>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                    </td>
                    <td>@employee.SurName</td>
                    <td>@employee.Name</td>
                    <td>@employee.MiddleName</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" title="Редактирование">
                            edit
                            <i class="fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index">На главную</a>
    </p>
</div>
