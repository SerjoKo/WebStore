@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>
                </td>
                <td>@employee.SurName</td>
                <td>@employee.Name</td>
                <td>@employee.MiddleName</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id" title="Редактирование">
                        <i class="fa-info"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" title="Редактирование">
                        <i class="fa-edit"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index">На главную</a>
    </p>
</div>
